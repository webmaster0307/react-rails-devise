{
  "extends": ["google", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "plugins": ["react"],
  "rules": {
    "strict": 0,
    "max-len": "off",
    "operator-linebreak": [2, "after",  {"overrides": {"?":"ignore", ":": "ignore"}}],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-class-assign": 0,
    "quote-props": 1,
    "require-jsdoc": 0,
    "one-var": "off",
    "eqeqeq": [2, "smart"],
    "no-multiple-empty-lines": [2, {"max": 1}],
    "max-params": [1, 3],
    "no-warning-comments": 0,
    "no-nested-ternary": 0,
    "react/prop-types": 0
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "document": true,
    "navigator": true,
    "window": true,
    "fetch": true,
    "localStorage": true,
    "describe": true,
    "it": true,
    "expect": true,
    "beforeEach": true,
    "beforeAll": true
  }
}
